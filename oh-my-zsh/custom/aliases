# List direcory contents
alias lsa='ls -lahF'
alias l='ls -lahF'
alias ll='ls -al'
alias la='ls -lAhF'
alias lf='ls -F'

# mh custom
alias src='source ~/.zshrc'
alias gsrc='cd ~/src'

# Idiot proofing :)
alias mv='mv -iv'
alias cp='cp -iv'
alias rm='rm -iv'
alias df='df -h'
alias du='du -h'
alias mkdir='mkdir -p'

# Ping
alias pi='ping -Anc 5 8.8.8.8'

# Speedtest
alias speedtest='wget -O /dev/null http://speedtest.wdc01.softlayer.com/downloads/test10.zip'

# Git Aliases
